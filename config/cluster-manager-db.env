# Cluster Manager Database Configuration
# Dedicated PostgreSQL database for cluster state and resource management

# Database connection settings
CLUSTER_DB_HOST=localhost
CLUSTER_DB_PORT=5432
CLUSTER_DB_NAME=bitinglip_cluster
CLUSTER_DB_USER=cluster_manager
CLUSTER_DB_PASSWORD=cluster_manager_2025!

# Connection pool settings
CLUSTER_DB_POOL_SIZE=10
CLUSTER_DB_MAX_OVERFLOW=20
CLUSTER_DB_POOL_TIMEOUT=30

# Cluster management settings
CLUSTER_STATE_RETENTION_DAYS=180
CLUSTER_METRICS_RETENTION_DAYS=30
CLUSTER_HEARTBEAT_INTERVAL=15
CLUSTER_HEALTH_CHECK_INTERVAL=60

# Resource monitoring settings
CLUSTER_GPU_METRICS_INTERVAL=30
CLUSTER_MEMORY_METRICS_INTERVAL=60
CLUSTER_DISK_METRICS_INTERVAL=300

# Logging and monitoring
CLUSTER_DB_LOG_LEVEL=INFO
CLUSTER_DB_SLOW_QUERY_THRESHOLD=1.0
CLUSTER_DB_CONNECTION_LOGGING=false

# Backup and maintenance
CLUSTER_DB_AUTO_BACKUP=true
CLUSTER_DB_BACKUP_INTERVAL_HOURS=8
CLUSTER_DB_VACUUM_SCHEDULE="0 4 * * *"
